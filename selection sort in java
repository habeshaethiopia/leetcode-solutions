class Solution
{

public static void selectionSort(int arr[], int n)
	{int index;
        for(int i=0;i<n-1;i++)
        {index=i;
            for(int j=i+1;j<n;j++)
            if (arr[index]>arr[j])
            {index=j;
         }
      
        int temp=arr[i];
        arr[i]=arr[index];
        arr[index]=temp;
       
	   
	  	}
}
}
