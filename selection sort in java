class Solution
{

public static void selectionSort(int arr[], int n)
	{int index=-1;
        for(int i=0;i<n-1;i++)
        {
            for(int j=i+1;j<n;j++)
            if (arr[i]>arr[j])
            {index=j;
            break;
            }
       if (index!=-1){
        int temp=arr[i];
        arr[i]=arr[index];
        arr[index]=temp;
       }
	   
	  	}
}
}
